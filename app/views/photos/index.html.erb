<% if @city.present? %>
  <div class="header-row">
    <span>
      <%= "Photos of #{@city.name}" %>
    </span>
  </div>
<% end %>
<% @photos.each do |photo| %>
  <div class="image">
    <%= image_tag photo.image.url(:small) %>
    <% unless @city.present? %>
      <h2>
        <%= photo.city.name %>,<%= photo.city.country.name %>
      <h2>
    <% end %>
  </div>
<% end %>
